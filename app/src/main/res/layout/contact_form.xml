<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:paddingHorizontal="@dimen/layout_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/name_iv"
            style="@style/AppTheme.ImageView"
            android:src="@drawable/ic_perm_identity_black_24"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_height"
            android:layout_weight="@dimen/iv_weight"
            android:layout_marginTop="@dimen/form_iv_margin_top"
            android:layout_gravity="top"
            />

        <EditText
            android:id="@+id/first_name_et"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/first_name_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/text_weight"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/iv_weight"
            />
        <EditText
            android:id="@+id/last_name_et"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/last_name_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/text_weight"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phone_iv"
            style="@style/AppTheme.ImageView"
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_height"
            android:layout_weight="@dimen/iv_weight"
            android:layout_marginTop="@dimen/form_iv_margin_top"
            android:layout_gravity="top"/>

        <EditText
            android:id="@+id/phone_et"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/phone_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/text_weight"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/email_iv"
            style="@style/AppTheme.ImageView"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_height"
            android:layout_weight="@dimen/iv_weight"
            android:layout_marginTop="@dimen/form_iv_margin_top"
            android:layout_gravity="top"/>

        <EditText
            android:id="@+id/email_et"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/email_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/text_weight"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/address_iv"
            style="@style/AppTheme.ImageView"
            android:src="@drawable/ic_place_black_24dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_height"
            android:layout_weight="@dimen/iv_weight"
            android:layout_marginTop="@dimen/form_iv_margin_top"
            android:layout_gravity="top"/>

        <EditText
            android:id="@+id/address_et"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/address_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/text_weight"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/website_iv"
            style="@style/AppTheme.ImageView"
            android:src="@drawable/ic_public_black_24dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/iv_height"
            android:layout_weight="@dimen/iv_weight"
            android:layout_marginTop="@dimen/form_iv_margin_top"
            android:layout_gravity="top"/>

        <EditText
            android:id="@+id/website_et"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/website_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/text_weight"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/AppTheme.ContactForm.Button"
        android:id="@+id/save_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/button_margin_horizontal"
        android:layout_marginTop="@dimen/button_margin_top"
        android:text="Save Contact"
        android:layout_gravity="center_horizontal"
        android:onClick="saveContact"
        />
</LinearLayout>